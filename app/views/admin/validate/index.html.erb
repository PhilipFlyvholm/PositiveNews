<%= javascript_include_tag "validate", "data-turbolinks-track" => true %>

<h1>Article validator</h1>

<div class="grid" id="article-container">
  <h2 class="text-center">Det var alt for nu!</h2>
  <% @articles.each do |article| %>
    <article class="bg-slate-900 col-span-full row-span-full" data-article-id="<%=article.id %>">
      <% if article.image_url %>
        <img class="rounded-md max-w-1/3 mx-auto my-2" src="<%= article.image_url %>"/>
      <% end %>
      <h2><%= link_to article.title, article.link %></h2>
      <small>Currently <%=article.score >= 1 ? "Positive" : "Negative" %></small>
      <p><%=article.body %></p>
    </article>
  <% end %>
</div>
<div class="fixed bottom-0 left-0 z-50 w-full">
    <div class="flex w-1/4 m-auto justify-center gap-5">
        <button id="button-validate-negative" class="bg-red-500 rounded-full">
            <i class="fa-solid fa-face-sad-tear text-white font-bold"></i>
        </button>
        <button id="button-validate-positive" class="bg-green-500 rounded-full">
            <i class="fa-solid fa-face-smile text-white font-bold"></i>
        </button>
      <button id="button-validate-trash" class="bg-black rounded-full">
        <i class="fa-solid fa-trash text-white font-bold"></i>
      </button>
    </div>
</div>